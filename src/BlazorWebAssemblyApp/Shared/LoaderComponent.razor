@typeparam TItem    

@if (Items == null)
{
    <TitleComponent Title="@Title" />
}
else
{
    @ChildContent
}

@code {

    [Parameter]
    public IEnumerable<TItem> Items { get; set; }

    [Parameter, EditorRequired]
    public required string Title { get; set; } = "Loading Items...";

    [Parameter, EditorRequired]
    public required RenderFragment ChildContent { get; set; } // Nazwa ma znaczenie!

}
