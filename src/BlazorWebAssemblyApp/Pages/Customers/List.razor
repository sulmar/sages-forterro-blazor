@page "/customers"
@using Domain.Abstractions
@using Domain.Models
@using BlazorWebAssemblyApp.Shared

<h3>Customer List</h3>

<p>@message</p>

<LoaderComponent Items="@customers" Title="Loading Customers...">
    <ListItemsComponent Items="@customers">
        <ItemTemplate Context="customer">
            <li>@customer.Id @customer.Name @customer.Email</li>
        </ItemTemplate>
    </ListItemsComponent>
</LoaderComponent>
