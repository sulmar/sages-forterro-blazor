@page "/customers"
@using Domain.Abstractions
@using Domain.Models


<h3>Customer List</h3>

<p>@message</p>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var customer in customers)
        {
            <li>@customer.Id @customer.Name @customer.Email</li>
        }
    </ul>
}
